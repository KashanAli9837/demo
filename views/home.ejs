<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("layout/metas") %>
    <link
      href="https://cdn.datatables.net/v/bs4/dt-2.1.7/datatables.min.css"
      rel="stylesheet"
    />
    <script
      src="https://cdn.datatables.net/v/bs4/dt-2.1.7/datatables.min.js"
      defer
    ></script>
  </head>
  <body>
    <%- include("layout/header") %>

    <div class="container">
      <div class="row my-4">
        <div class="col-lg-12">
          <% if (message) { %>
          <div
            class="alert alert-dismissable fade show alert-<%= message.type %>"
            role="alert"
          >
            <button
              class="btn-close"
              type="button"
              data-bs-dismiss="alert"
              aria-label="close"
            ></button>
            <strong><%= message.message %></strong>
          </div>
          <% } %>
          <div class="table-responsive">
            <table id="myTable" class="table text-center table-stripped my-4">
              <thead>
                <tr class="table-dark">
                  <th>ID</th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>E-mail</th>
                  <th>Phone</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach((user, i) => { %>
                <tr class="align-middle">
                  <td><%= i + 1 %></td>
                  <td>
                    <img
                      src="<%= user.image %>"
                      alt="profile_img"
                      width="100"
                      class="img-thumbnail"
                    />
                  </td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td>
                    <a
                      href="/edit/<%= user._id %>"
                      class="text-success"
                      style="text-decoration: none"
                    >
                      <i class="ri-edit-box-line mx-1"></i>
                    </a>
                    <a
                      href="/delete/<%= user._id %>"
                      class="text-danger"
                      style="text-decoration: none"
                    >
                      <i class="ri-delete-bin-6-line mx-1"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script type="module">
      $(document).ready(function () {
        $("#myTable").DataTable();
      });
    </script>
  </body>
</html>
